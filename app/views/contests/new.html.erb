<% provide(:title, 'Create contest') %>
<h1>Create contest</h1>

<div class="row">
  <div class="span4 offset4">
  	<% @contest = Contest.new  %>
    <%= form_for(@contest) do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :description %>
      <%= f.text_field :description %>

      <%= f.label :start_date %>
      <%= f.text_field :start_date %>

      <%= f.label :end_date %>
      <%= f.text_field :end_date %>

      <%= f.label :image %>
      <%= f.file_field :image %>
  </div>
</div>
<div class="row">
  <div class="span4 offset4">
      <%= f.submit "Save changes", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>